# ===========================================
# Badminton Analyzer Configuration
# Copy this file to .env and update values
# ===========================================

# ----- App Settings -----
DEBUG=false
APP_NAME=Badminton Analyzer API

# ----- Database -----
# For local development (SQLite):
# DATABASE_URL=sqlite:///./badminton_analyzer.db

# For production (MySQL):
DATABASE_URL=mysql+pymysql://root:mypassword@localhost:3306/badminton_analyzer

# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/badminton_analyzer

# ----- JWT Authentication -----
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----- File Storage -----
UPLOAD_DIR=uploads
OUTPUT_DIR=analysis_output
MAX_UPLOAD_SIZE_MB=500

# ----- S3 Storage (Optional - for AWS deployment) -----
USE_S3=false
S3_BUCKET=
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CLOUDFRONT_DOMAIN=

# ----- Analysis Settings -----
MAX_CONCURRENT_JOBS=2

# ----- CORS -----
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ----- Redis (Optional - for WebSocket scaling) -----
REDIS_URL=

# ----- Signup Access Control -----
# Comma-separated invite codes (case-insensitive)
INVITE_CODES=BADMINTON2024,NEYMO2024,EARLYBIRD

# Comma-separated whitelisted emails that can signup without invite code
WHITELIST_EMAILS=
